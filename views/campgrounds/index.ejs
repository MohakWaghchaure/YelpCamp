<% layout('./layouts/boilerplate') -%>

<h1>Campgrounds</h1>
<!-- <a href="/campgrounds/new">add new..</a> -->
<ul>
    <% for(camp of campgrounds){ %>
        <!-- <li><a href="/campgrounds/<%= camp._id %>"><%= camp.title %></a></li>    -->
        <div class="card mb-3">
            <div class="row">
                <div class="col-lg-4">
                    <img class="img-fluid" alt="alt" src=" <%= camp.image%>">
                </div>
                <div class="col-lg-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title %></h5>
                        <p class="card-text"><%= camp.description %></p>
                        <p class="text-muted"><%= camp.location %></p>
                        <a class="btn btn-primary" href="campgrounds/<%= camp._id %>">View Details</a>
                    </div>                    
                </div>
            </div>            
        </div> 
    <% } %>
</ul>

